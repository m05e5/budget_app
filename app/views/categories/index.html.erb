<div class='container'>
  <header class='header'>
    <div class='header-space'>
      
    </div>
    <div>
      <h1 class='header-title'>Categories</h1>
    </div>
    <%= link_to("Logout", destroy_user_session_path, method: :delete, class: 'log-out')%>
  </header>
  <div class="content">
    

    <% @categories.each do |category|%>
      <div class='category'>
      <%if category.icon.attached? %>
        <%= image_tag category.icon, class: 'cat_icon'%>
      <%else%>
        <img src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTOYeuoelhM2iWeIjc--_YW3ZlqrFaIHOCqyQ&usqp=CAU' alt='No image' class= 'cat_icon'>
      <%end%>
        <div class='cat_details'>
          <a class='cat_name' href="categories/<%= category.id %>/entities">
            <%= category.name%> 
          </a>
          <div class='cat_amount'> 
            <%= category.total_amount%> $
          </div>
        </div>
      </div>
    <%end%>

  </div>
  <footer class='footer'>
    <%= link_to("Create Category", categories_new_path, class: 'bottom_create')%>
  </footer>
</div