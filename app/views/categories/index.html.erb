<div class='container'>
  <header class='header'>
    <div>
      <%= link_to("Logout", destroy_user_session_path, method: :delete)%>
    </div>
    <div>
      <h1 class='header-title'>Categories</h1>
    </div>
    <%= link_to("Logout", destroy_user_session_path, method: :delete, class: 'log-out')%>
  </header>
  <div class="content">
    

    <% @categories.each do |category|%>
      <div class='category'>
        <%= image_tag category.icon, class: 'cat_icon'%>
        <a href="categories/<%= category.id %>/entities">
          <p class='cat_name'><%= category.name%> </p>
        </a>
      </div>
    <%end%>

  </div>
  <footer class='footer'>
    <%= link_to("create", categories_new_path)%>
  </footer>
</div