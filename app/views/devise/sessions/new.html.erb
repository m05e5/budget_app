
<div class='form-page'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <header class='header'>
      <div class='header-space'>
        <%= link_to" < ", welcome_path, class: 'back'%>
      </div>
      <div>
        <h1 class='header-title'>LOGIN</h1>
      </div>
      <%= f.submit "Log in", class: 'form_next' %>
    </header>
      
      
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: 'input' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'input' %>
      </div>

      <div class="actions">
      </div>
      <% flash.each do |name, message| %>
          <div class="<%= name %>"><%= message %></div>
      <% end %>
    <% end %>
    <%= render "devise/shared/links" %>
</div>
